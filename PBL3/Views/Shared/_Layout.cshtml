<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello, world!</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css"/>
</head>
<body>
    <header class="container-fluid p-3 d-flex justify-content-around align-items-center bg-light">
        <div class="navbar-brand">
            @Html.ActionLink("Minishop", "Index", new { controller = "Home" }, new { @class = "text-decoration-none" })
        </div>
        <div class="d-flex">
            <input type="" name="" class="rounded-start rounded-0 form-control">
            <button class="btn btn-primary rounded-0">Search</button>
        </div>
        <div class="navbar-nav p-1 d-sm-none d-flex">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#">Category</a></li>
                    <li><a class="dropdown-item" href="#">Cart</a></li>

                    <li><a class="dropdown-item" href="#">Login</a></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </li>
        </div>
        <div class="d-none d-sm-flex">
            <a href="" class="p-2 text-decoration-none">Home</a>
            <a href="" class="p-2 text-decoration-none">Category</a>
            <a href="" class="p-2 text-decoration-none">Cart</a>
            @if (Session["User"] == null)
            {
                @Html.ActionLink("Đăng nhập", "Login", new { controller = "User" }, new { @class = "p-2 text-decoration-none" })
                @Html.ActionLink("Đăng kí", "Register", new { controller = "User" }, new { @class = "p-2 text-decoration-none" })
            }
            else
            {
                @Html.ActionLink("User name", "Register", new { controller = "User" }, new { @class = "p-2 text-decoration-none" })
                @Html.ActionLink("Đăng xuất", "Logout", new { controller = "User" }, new { @class = "p-2 text-decoration-none" })
            }
        </div>
    </header>

    @RenderBody()

    <footer class="ftco-footer ftco-bg-dark ftco-section bg-light">
        <div class="container">
            <hr>
            <div class="d-flex justify-content-around">
                <a href="" class="text-decoration-none">Test</a>
                <a href="" class="text-decoration-none">Test</a>
                <a href="" class="text-decoration-none">Test</a>
                <a href="" class="text-decoration-none">Test</a>
                <a href="" class="text-decoration-none">Test</a>
                <a href="" class="text-decoration-none">Test</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstap")
    @RenderSection("scripts", required: false)
</body>
</html>
