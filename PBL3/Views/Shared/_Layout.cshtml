@using Models.DTO
@using Models.BLL
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello, world!</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <style>
        .test:hover {
            color: #0d6efd !important;
        }

        body {
            background-color: #F0F2F5;
        }
    </style>
    @RenderSection("Styles", false)
</head>
<body>
    <div class="shadow p-3 m-0 row justify-content-center bg-light sticky-top">
        <header class="d-flex justify-content-between align-items-center" style="width: 73.7em">
            <div class="navbar-brand">
                @Html.ActionLink("Minishop", "Index", new { controller = "Home" }, new { @class = "text-decoration-none" })
            </div>
            <div class="navbar-nav p-1 d-sm-none d-flex">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">

                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item">Category</a></li>
                        @if (Session["User"] == null)
                        {
                            <li>@Html.ActionLink("Đăng nhập", "Login", new { controller = "User" }, new { @class = "p-2 text-decoration-none dropdown-item" })</li>
                            <li>@Html.ActionLink("Đăng kí", "Register", new { controller = "User" }, new { @class = "p-2 text-decoration-none dropdown-item" })</li>
                        }
                        else
                        {
                            User user = new UserBO().find((int)Session["USER"]);
                            <li>@Html.ActionLink(user.Name, "Index", new { controller = "User" }, new { @class = "p-2 text-decoration-none dropdown-item" })</li>
                            <li>@Html.ActionLink("Đăng xuất", "Logout", new { controller = "User" }, new { @class = "p-2 text-decoration-none dropdown-item" })</li>
                        }
                    </ul>
                </li>
            </div>
            <div class="d-none d-sm-flex">
                @Html.ActionLink("Trang chủ", "Index", new { controller = "Home", area = string.Empty }, new { @class = "p-2 text-decoration-none" })
                <a href="@Url.Action("Index", "Cart")" class="p-2 text-decoration-none">Giỏ hàng</a>
                <a href="@Url.Action("Index", "Voucher")" class="p-2 text-decoration-none">Voucher</a>
                @if (Session["User"] == null)
                {
                    @Html.ActionLink("Đăng nhập", "Login", new { controller = "User", area = string.Empty }, new { @class = "p-2 text-decoration-none" })
                    @Html.ActionLink("Đăng kí", "Register", new { controller = "User", area = string.Empty }, new { @class = "p-2 text-decoration-none" })
                }
                else
                {
                    User user = new UserBO().find((int)Session["USER"]);
                    <div class="dropdown">
                        <a class="btn dropdown-toggle text-primary p-2" href="@Url.Action("Index", "User", new {area = string.Empty})" data-bs-toggle="dropdown" aria-expanded="false" style="border: none">
                            @user.Name
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            @if (!user.isActivated)
                            {
                                <li>
                                    <a class="dropdown-item d-flex" href="@Url.Action("ActivateAccount", "User", new {area = string.Empty})">
                                        <div class="col-2">
                                            <i class="fa-solid fa-user"></i>
                                        </div>
                                        <span>Kích hoạt tài khoản</span>
                                    </a>
                                </li>
                            }
                            <li>
                                <a class="dropdown-item d-flex" href="@Url.Action("Index", "User", new {area = string.Empty})">
                                    <div class="col-2">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <span>Tài khoản</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex" href="@Url.Action("Orders", "User", new {area = string.Empty})">
                                    <div class="col-2">
                                        <i class="fa-solid fa-clipboard-list"></i>
                                    </div>
                                    <span>Đơn mua</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex" href="@Url.Action("Logout", "User", new {area = string.Empty})">
                                    <div class="col-2">
                                        <i class="fa-solid fa-right-from-bracket"></i>
                                    </div>
                                    <span>Đăng xuất</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </header>
    </div>
    <div class="container-fluid m-auto mt-5 row" style="background-color: #F0F2F5; position: relative">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white pt-5 pb-4 mt-5">
        <div class="container text-dark text-md-left">

            <div class="row text-start text-md-left">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="mb-4 font-weight-bold text-muted">Thông tin liên hệ:</h5>
                    <a href="#" class="text-white text-decoration-none test">86 Bà Triệu, Thành Phố Huế</a>
                    <a href="#" class="text-white text-decoration-none test">0392579605</a>
                    <a href="#" class="text-white text-decoration-none test">minishop.pbl3@gmail.com</a>
                </div>

                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3 d-flex flex-column">
                    <h5 class="mb-4 font-weight-bold text-muted">Chính sách hỗ trợ:</h5>
                    <a href="#" class="text-white text-decoration-none test">Tìm kiếm</a>
                    <a href="#" class="text-white text-decoration-none test">Giới thiệu</a>
                    <a href="#" class="text-white text-decoration-none test">Chính sách đổi trả</a>
                    <a href="#" class="text-white text-decoration-none test">Chính sách bảo mật</a>
                    <a href="#" class="text-white text-decoration-none test">Điều khoản dịch vụ</a>
                </div>

                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3 d-flex flex-column">
                    <h5 class="mb-4 font-weight-bold text-muted">Nổi bật:</h5>

                    <a href="#" class="text-white text-decoration-none test">Sản phẩm khuyến mãi</a>
                    <a href="#" class="text-white text-decoration-none test">Sản phẩm nổi bật</a>
                    <a href="#" class="text-white text-decoration-none test">Tất cả sản phẩm</a>

                </div>
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3 d-flex flex-column">
                    <h5 class="mb-4 font-weight-bold text-muted">Thông tin liên kết:</h5>
                    <a href="#" class="text-white text-decoration-none test"><i class="fa-brands fa-facebook-square"></i> Facebook</a>
                    <a href="#" class="text-white text-decoration-none test"><i class="fa-brands fa-instagram"></i> Instagram</a>
                </div>
            </div>
        </div>
        <hr>
        <div class="p-3 text-center">
            © Bản quyền thuộc về minishop 2022
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
