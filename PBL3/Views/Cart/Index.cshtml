@using EF.Models
@using PBL3.Models
@model List<CartProduct>
@{
    ViewBag.Title = "Index";
}
@section Styles
{
    <link rel="stylesheet" href="~/public/css/Cart.css">
    <link rel="stylesheet" href="~/public/uploads/products">
}
<div class="container" style="width: 73.7em">

    <!-- Shopping Cart-->
    <div class="table-responsive shopping-cart">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Tên sản phẩm</thclass="text-center">
                    <th class="text-center">Số lượng</th>
                    <th class="text-center">Tổng tiền</th>
                    <th class="text-center">Discount</th>
                    <th class="text-center"><a class="btn btn-sm btn-danger" href="#">Xóa tất cả</a></th>
                    <th class="text-center"><a class="btn btn-sm btn-success" href="#">Chọn</a></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < ((List<CartProduct>)Model).Count; i++)
                {
                <tr>
                    <td>
                        <div class="product-item">
                            <img src=@Model[i].Product.Image alt="" / style="max-width: 150px">
                            <div class="product-info">
                                <h4 class="product-title"><a href="#">@Model[i].Product.Name</a></h4><span>
                            </div>
                        </div>
                    </td>
                    <td class="center">

                        <div class="input-group w-auto justify-content-center align-items-center">
                            <div class="minus input-group-prepend">
                                <button class="btn btn-dark btn-sm"  data-productID="@Model[i].Product.ID" onclick="UpdateCartProduct(this, -1)"><i class="fas fa-minus"></i></button>
                            </div>
                            <input type="text" id="qty_input" class="text" value=@Model[i].Quantity readonly>
                            <div class="plus input-group-prepend">
                                <button class="btn btn-dark btn-sm" data-productID="@Model[i].Product.ID" onclick="UpdateCartProduct(this, 1)"><i class="fas fa-plus"></i></button>
                            </div>
                        </div>
                    </td>
                    <td class="text-center text-lg text-medium">@String.Format("{0:0,0}", (Model[i].Quantity * Model[i].Product.Price))</td>
                    <td class="text-center text-lg text-medium">—</td>
                    <td class="text-center">
                            <button type="button" class="btn bg-danger rounded ms-2" title="Xóa sản phẩm khỏi giỏ hàng" data-index="@i" data-id="@Model[i].ID" onclick="deleteHandler(this)">
                                <i class="fa-solid fa-trash-can" style="color: white"></i>
                            </button>
                       </td>
                    
                        <td class="text-center" data-index="@i" data-id="@Model[i].ID">
                            <input type="checkbox" id="add_order" />
                        </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="shopping-cart-footer">
        <div class="column">
            <form class="coupon-form">
                <input class="form-control form-control-sm" type="text" placeholder="Mã giảm giá">
                <button class="btn btn-primary btn-sm" type="submit">Áp dụng</button>
            </form>
        </div>
        <div class="column text-lg">Tổng tiền: <span class="text-medium">43.430.000 VND</span></div>
    </div>
    <div class="shopping-cart-footer">
        <div class="column">
            <a class="btn btn-secondary" href="#">
                <i class="icon-arrow-left"></i>&nbsp;
                Tiếp tục mua hàng
            </a>
        </div>
        <div class="column">
         <a class="btn btn-success" href="#">Thanh toán</a>
        </div>
    </div>
</div>
<div class="position-fixed d-flex justify-content-end p-3" style="z-index: 11; top: 10%">
    <div id="notification_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fa-solid fa-bell"></i>
            <strong class="me-auto ms-1">Thông báo</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body text-white bg-success" id="toast_body">

        </div>
    </div>
</div>
@section scripts{
    <script src="~/public/js/Cart.js"></script>    
}